/**
 * Event Tickets Plus - IAC styles.
 *
 * @since 5.1.0
 */
@import "utilities/_all.pcss";

.event-tickets,
.entry .entry-content .event-tickets {

	.tribe-tickets__iac-email-disclaimer {
		padding: var(--spacer-2) 0 var(--spacer-6) 0;
		color: var(--color-text-primary-light);

		@media(--viewport-medium) {
			padding: calc(var(--spacer-4) / 2) 0 var(--spacer-6) 0;
		}
	}
}
